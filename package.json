{
  "name": "toy_robot",
  "version": "0.0.1",
  "description": "Toy Robot coding challenge",
  "scripts": {
    "start": "npm-run-all -p build:watch serve:dev",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest --forceExit --coverage --verbose",
    "test:watch": "npm run test -- --watchAll",
    "serve:dev": "nodemon --watch dist --exec cross-env NODE_ENV=development node ./dist/server.js"
  },
  "author": "Shannon Oram <npm.shannon@gmail.com> (https://github.com/s-oram)",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.2",
    "cross-env": "^5.2.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "typescript": "^3.5.2"
  },
  "dependencies": {}
}
